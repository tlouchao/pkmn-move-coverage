{
    "root": true,
    "extends": "eslint:recommended",
    "ignorePatterns": ["**/node_modules/**", "**/dist/**"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "rules": {
        "quotes": ["error", "double"],
        "indent": ["error", 4]
    }
}