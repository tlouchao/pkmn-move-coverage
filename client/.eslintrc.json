{
    "root": true,
    "extends": "eslint:recommended",
    "ignorePatterns": ["**/node_modules/**", "**/dist/**"],
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "quotes": ["error", "double"],
        "indent": ["error", 4]
    }
}